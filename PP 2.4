public class MyClass {
    public static void main(String args[]) {
      int hour = 2;
      int minute = 56;
      int seconds = 45;
      int hour2 = hour * 3600;
      int minute2 = minute * 60;
      int done = hour2 + minute2 + seconds;
      System.out.println(hour + " hour, " + minute + " minutes, " + seconds + " seconds is equivalent to " + done + " seconds.");
    }
}
